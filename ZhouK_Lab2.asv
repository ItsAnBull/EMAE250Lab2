function big = ZhouK_Lab2(A)

% initialize the output variable
big = 0;

for i = 1:4
    
    % store the term to be multiplied to the 3x3 matrix in term
   
    term = A(1,i);
    M = A;
    M(1,:) = [];
    M(:,i) = [];
    small = 0;

    for j = 1:3

        term2 = M(1,j);
        N = M;
        N(1,:) = [];
        N(:,j) = [];
        det = (N(1,1)*N(2,2) - N(1,2)*N(2,1));
        small = small + ((-1)^(j+1))*term2*det

    end

    big = big + ((-1)^(i+1))*term*small;

end